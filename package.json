{
  "name": "system-industry-be",
  "version": "0.0.0",
  "description": "Template backend system using Node.js and express.js",
  "main": "dist/app.js",
  "directories": { "doc": "docs", "lib": "lib", "test": "tests" },
  "scripts": {
    "prepublish": "npm run build",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "start": "node dist/app",
    "start:dev": "node dist/app --watch",
    "start:debug": "node dist/app --debug --watch",
    "start:prod": "node dist/app",
    "lint": "tslint --project '.'",
    "lint-tests": "tslint --project './tests/.'",
    "test": "jest --coverage --detectOpenHandles",
    "test-debug": "DEBUG=modeso:tests:* jest --coverage --detectOpenHandles",
    "test-debug-lib": "DEBUG=modeso:* jest --coverage --detectOpenHandles",
    "mergetests": "npm run reinstall && npm run test",
    "reinstall": "( rm  package-lock.json && rm -r node_modules && rm -r dist && npm install ) ||  npm install "
  },
  "author": "Ahmed Mohamed",
  "license": "UNLICENCED",
  "dependencies": {
    "body-parser": "^1.19.2",
    "chokidar": "^3.5.3",
    "cookie-parser": "^1.4.6",
    "debug": "^4.3.3",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "jsonfile": "^6.1.0",
    "mongoose": "^6.2.4",
    "mysql": "^2.18.1",
    "pino": "^7.8.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/chokidar": "^2.1.3",
    "@types/debug": "^4.1.7",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^27.4.1",
    "@types/mongodb": "^4.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/uuid": "^8.3.4",
    "jest": "^27.5.1",
    "node-mocks-http": "^1.11.0",
    "ts-jest": "^27.1.3",
    "tslint": "^6.1.3",
    "typescript": "^4.6.2"
  },
  "repository": { "type": "git", "url": "git+https://github.com/AhmedMohamed5393/system-industry-be.git" },
  "keywords": ["template", "backend"],
  "bugs": { "url": "https://github.com/AhmedMohamed5393/system-industry-be/issues" },
  "homepage": "https://github.com/AhmedMohamed5393/system-industry-be#readme"
}
